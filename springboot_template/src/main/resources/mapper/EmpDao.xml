<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyh.template.springboot_template.dao.EmpDao">

    <resultMap type="com.lyh.template.springboot_template.entity.Emp" id="EmpMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="salary" column="salary" jdbcType="NUMERIC"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmpMap">
        select
          id, name, salary, age, email
        from test.emp
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmpMap">
        select
          id, name, salary, age, email
        from test.emp
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="EmpMap">
        select
          id, name, salary, age, email
        from test.emp
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="salary != null">
                and salary = #{salary}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.emp(name, salary, age, email)
        values (#{name}, #{salary}, #{age}, #{email})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.emp
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="salary != null">
                salary = #{salary},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.emp where id = #{id}
    </delete>

</mapper>